@model IEnumerable<BO.Parks.Park>

@{
    ViewBag.Title = "Home Page";
}

<div class="container-bienvenue">
    <div class="card-panel bienvenue">
        <form class="col s12 center-align">
            <h3 class="center-align">Localiser un parking</h3>
            <div class="row">
                <div class="input-field col s12">
                    <input id="address" type="text" class="validate">
                    <label for="address" data-success="right">Votre adresse</label>
                </div>
            </div>
        </form>
    </div>
</div>
<!--  Parallax Section  -->
<div class="parallax-container">
    <!--<h1 class="center-align title-home">Vos événements en ligne</h1>-->
    <div class="parallax"><img src="~/Content/img/head_home.jpg"></div>
</div>
<div>
    <div class="row">
        <div class="col m4">
            <h2>Getting started</h2>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>
                        @item.id |
                        @item.parkInformation.name |
                        @item.parkInformation.status |
                        @item.parkInformation.max |
                        @item.parkInformation.free
                    </td>
                </tr>
            }

            </table>
        </div>
        <div class="col m4">
            <h2>Get more libraries</h2>
            <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
            <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
        </div>
        <div class="col m4">
            <h2>Web Hosting</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
            <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
        </div>
    </div>
</div>

